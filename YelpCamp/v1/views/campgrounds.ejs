<% include partials/header %>

<div class="container">
    <header class="jumbotron" style="margin:20px 0px 20px 0px">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked Campgrounds from all over the world</p>
            <a href="/campgrounds/new" class="btn btn-success btn-lg">Add new Campground</a>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach( (campground) => { %>
            <div class="col-md-3 col-sm-6" style="margin-bottom: 20px">
                <div class="card text-white bg-success" style="height:100%;">
                <img class="card-img-top" src="<%= campground.image %>">
                    <div class="card-body text-center">
                        <h4 class="card-title"><%= campground.name %></h4> 
                    </div>
                </div>  
            </div>
            
        <% }); %>
    </div>
</div>


<% include partials/footer %>