<% include ./partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">
            <%= blog.title %>
        </div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>" style="width: 100%">
                <div class="content">
                    <span>
                        <%= blog.created.toDateString() %>
                    </span>
                </div>
                <div class="description">
                    <p>
                        <%- blog.body %>
                    </p>
                </div>
                <div class="container" style="padding-top: 10px; width: 100%">
                    <a class="fluid ui blue button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                    <form class="fluid ui red button" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                        Delete
                    </form>
                </div>
            </div>
        </div>

    </div>


    <% include ./partials/footer %>